<!--examPage.wxml-->
<view class="container">
  <view class="time-area">
    <text class="start-time">开始:{{fStartTime}}</text>
    <text class="left-time">剩余:{{leftTime}}</text>
    <text class="progress">进度:{{index + 1}}/{{size}}</text>
  </view>
  <view class="title-area">
    <text class="title-name">(单选题){{title.name}}({{title.score}}分)</text>
    <view class="option-group">
      <view class="option-item">
        <image src="../../images/aNormal.png" class="icon"></image>
        <text class="option-text">1</text>
      </view>
      <view class="option-item">
        <image src="../../images/bNormal.png" class="icon"></image>
        <text class="option-text">2</text>
      </view>
      <view class="option-item">
        <image src="../../images/cNormal.png" class="icon"></image>
        <text class="option-text">3</text>
      </view>
      <view class="option-item">
        <image src="../../images/dNormal.png" class="icon"></image>
        <text class="option-text">4</text>
      </view>
    </view>
  </view>
  <view class="control-area">
    <view class="btn-prev" hover-class="btn-hover" hover-start-time="20" hover-stay-time="70">上一题</view>
    <view class="btn-next" hover-class="btn-hover" hover-start-time="20" hover-stay-time="70">下一题</view>
  </view>
</view>