/* punchClock.wxss */
.item-title {
  font-size: 28rpx;
  width: 100%;
  text-align: left;
  margin: 35rpx 0 12rpx 156rpx;
}

.item-info-wrap {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 0 35rpx 0;
  background-color: #FFFFFF;
}

.item-info0, .item-info1, .item-info2 {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-count, .text-title {
  font-size: 28rpx;
  position: absolute;
}

.text-count {
  position: absolute;
  top: 12rpx;
}

.text-title {
  position: absolute;
  bottom: 12rpx;
}

.text-placeholder {
  font-size: 28rpx;
}

.textarea {
  font-size: 28rpx;
  margin:0rpx 0rpx 100rpx 0rpx;
  background-color: #FFFFFF;
}

.btn-primary {
  margin: 0rpx  0rpx 35rpx 0rpx;
}