}

.flex-item0, .flex-item1, .flex-item2 {
  width: 245rpx;
  height: 245rpx;
  position: relative;
  background-color: #FFFFFF;
  border: 1rpx solid #E7E7E7;
}

.flex-item-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.flex-btn-text {
  text-align: center;
  position: absolute;
  font-size: 28rpx;
  color: #000000;
  left: 50%;
