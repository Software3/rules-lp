.action-wrp {
  width: 750rpx;
  height: 250rpx;
  background-repeat: no-repeat;
  background-size: 750rpx 100rpx;
  position: relative;
  z-index: 2;
  margin-top: 4rpx;
  flex-direction: row;
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
}

.flex-wrp{
